<!-- Progress Bar -->
<script type="text/javascript">
$('#pb').progressbar({ value: 15 });
$(function(){
	
	$('.vote').on('click',function(){
		var option_id = $(this).prop('rel');
		var datastring = "option_id="+option_id;

		$.ajax({
			url : "vote/",
			type: "GET",
			data : datastring,
			cache : false,

			success:function(response){
			window.location = "/polls/"+response;
			}
		});
	});	

	
});

</script>	

